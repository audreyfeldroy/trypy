prompt_background = #34495E
tutorial_background = #FFFFFF

html, body
    width: 100%
    height: 100%
    margin: 0
    line-height: 170%

#instructions
    width: calc(50% - 120px)
    float: left
    height: calc(100% - 60px)
    background: tutorial_background
    padding: 30px 60px
    text-align: center
    font-family: 'Roboto'
    font-weight: 300

    h1
        margin: 10px 0 30px 0

    ul
        text-align: left

    code
        background: rgba(0,0,0,0.1)
        padding: 3px 5px
        font-family: 'Droid Sans Mono'
        font-size: 12px

#interpreter
    width: calc(50% - 60px)
    height: calc(100% - 60px)
    float: right
    background: prompt_background
    padding: 30px
    font-family: 'Droid Sans Mono'
    color: white
    line-height: 200%
    font-size: 13px

    .error-true
        color: #F22613
    .error-success
        color: #2ECC71
        font-weight: bold

    input[type="text"]
        background: prompt_background
        border: 0px
        color: white
        font-family: 'Droid Sans Mono'
        font-size: 13px
        outline: none
        width: 90%
        padding: 4px 0

    .preloader
        height: 100%
        position: absolute
        width: 100%
        background: rgba(255,255,255,0.2)
        top: 0
        left: 50%

        .flower
            position: absolute
            top: 50%
            left: 25%
